@model Gosh.Models.Recipe

@{
    ViewBag.Title = "Details";
}


<link href="~/Content/category.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

<div class="row">
    <header>
        <h2>Details of recipe - @Html.DisplayFor(model => model.Header)</h2>
    </header>
    <div class="containerD2">
        <hr />
        <div class="col">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Summary)
                </dt>
                
                <dd style=" white-space: pre-line;">
                    <section>
                        @Html.DisplayFor(model => model.Summary)
                    </section>
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.Content)
                </dt>

                <dd style=" white-space: pre-line;">
                    <section>
                    @Html.DisplayFor(model => model.Content)
                    <br />
                    </section>
                </dd>



            </dl>
        </div>
        <div class="col">
            <img class="img" style="margin-left:180px;" src="~/images/@Model.HomeImageUrl" width="200" height="270" alt="" />
        </div>
    </div>
    <p>
        @if (Session["Username"] != null && Session["Username"].ToString() == "ADMIN") {
                @Html.ActionLink("Edit", "Edit", new { id = Model.RecipeId })
        }
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
