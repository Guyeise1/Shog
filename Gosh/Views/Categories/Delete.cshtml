@model Gosh.Models.Category

@{
    ViewBag.Title = "Delete";
}
<link href="~/Content/category.css" rel="stylesheet" type="text/css" />

<div class="row">
    <h2 style="color:  red">Delete - @Html.DisplayFor(model => model.CategoryName)</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dd>
                <img src=~/images/@Model.ImagePath width="200">
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="leftPad form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>