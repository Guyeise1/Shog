<html lang="">
<head>
    <meta charset="utf-8" />
    <meta name="viewport">
    <title>@ViewBag.Title GoshOnline - best recipes worldwide</title>
    <link rel="Shortcut Icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="icon" type="image/x-icon" href="~/Content/Images/favicon.ico">
    <style>
        footer {
            text-align: center;
            padding: 3px;
            color: #4B7F4B;
            position: fixed;
            height: 20px;
            bottom: 0px;
            left: 0px;
            right: 0px;
            margin-bottom: 0px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top  nav-style">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("G O S H Recipes 🥑", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                @{


                    @Html.ActionLink("Categories", "index", "Categories", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Recipes", "index", "Recipes", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Suprise", "Index", "Inspiration", new { area = "" }, new { @class = "navbar-brand" })
                    if (Session["Username"] != null && Session["Username"].ToString() == "ADMIN")
                    {
                        @Html.ActionLink("All Users", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
                    }

                    if (Session["Username"] != null && Session["Username"].ToString() == "ADMIN")
                    {
                        @Html.ActionLink("Statistics", "Index", "Graph", new { area = "" }, new { @class = "navbar-brand" })
                    }

                }


            </div>
            @{
                if (Session["Username"] != null)
                {

                    //<label class="label success" style="padding-top: 30"> @(Session["Username"])</label>
                    @Html.ActionLink(Session["FirstName"].ToString(), "Edit", "User", new { area = "", id = long.Parse(Session["Userid"].ToString()) }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Recommended", "RecommendedForYou", "Categories", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Logout", "Logout", "User", new { area = "" }, new { @class = "navbar-brand" })

                }

                else
                {
                    @Html.ActionLink("Register", "Register", "User", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Login", "Login", "User", new { area = "" }, new { @class = "navbar-brand" })

                }

            }
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <div class="">
        <footer>
            <p>all rights reserved to 
            &copy; GOSH - 2020</p>
        </footer>
    </div>
</body>
</html>